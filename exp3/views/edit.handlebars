<h2>Edit Student Details</h2>
<form method="POST" action="/edit/{{student._id}}">
    <label>Name:</label><input type="text" name="name" value="{{student.name}}" required><br><br>
    <label>Roll No:</label><input type="text" name="rollno" value="{{student.rollno}}" required><br><br>
    <label>Degree:</label><input type="text" name="degree" value="{{student.degree}}" required><br><br>
    <label>10%:</label><input type="number" step="0.01" name="perc10" value="{{student.perc10}}" required><br><br>
    <label>12%:</label><input type="number" step="0.01" name="perc12" value="{{student.perc12}}" required><br><br>
    <label>UG%:</label><input type="number" step="0.01" name="percUG" value="{{student.percUG}}" required><br><br>
    <label>PG%:</label><input type="number" step="0.01" name="percPG" value="{{student.percPG}}" required><br><br>
    <button type="submit">Update</button>
</form>
